@page "/"

<PageTitle>Rules Editor - Home</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">Decision Tree Rules Editor</h1>
            <p class="lead">A modern web application for creating and editing rules.json files</p>
            
            <div class="mt-5">
                <a href="/editor" class="btn btn-primary btn-lg">
                    <i class="bi bi-pencil-square"></i> Open Editor
                </a>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Validation</h5>
                    <p class="card-text">Real-time validation using DecisionTreeEngine ensures your rules are properly formatted</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-eye text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Visual Preview</h5>
                    <p class="card-text">See your decision tree structure with expandable node details</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-lightning text-warning" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Easy to Use</h5>
                    <p class="card-text">Simple and intuitive interface for creating and editing decision trees</p>
                </div>
            </div>
        </div>
    </div>
</div>

