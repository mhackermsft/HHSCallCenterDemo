@page "/"

<PageTitle>Rules Editor - Home</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">Decision Tree Builder</h1>
            <p class="lead">Build decision trees visually - no coding or JSON knowledge required</p>
            
            <div class="mt-5">
                <a href="/editor" class="btn btn-primary btn-lg">
                    <i class="bi bi-pencil-square"></i> Start Building
                </a>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-ui-checks text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Visual Interface</h5>
                    <p class="card-text">Build your decision tree using simple forms - no JSON editing required</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Automatic Validation</h5>
                    <p class="card-text">Your tree is automatically validated when you save - no need to worry about format</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-lightbulb text-warning" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Easy for Beginners</h5>
                    <p class="card-text">No programming or technical knowledge needed - anyone can build decision trees</p>
                </div>
            </div>
        </div>
    </div>
</div>

